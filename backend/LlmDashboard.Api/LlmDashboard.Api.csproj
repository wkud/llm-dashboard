      <UserSecretsId>dc686a19-0771-40ea-820c-44b5a2168198</UserSecretsId>
  </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.1" />
